{
  "manifest_version": 3,
  "name": "Chromium Clear Cache Refresh",
  "version": "1.0.0",
  "description": "Clears Chromium (Chrome, Edge, Brave, etc.) cache and refreshes the page.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Chromium Clear Cache"
  },
  "permissions": ["activeTab", "browsingData", "scripting", "tabs"]
}
